pipeline{
    agent any
     stages {
        stage('build'){
            steps {
                  sh 'build failure'      
            }
          }
            post{
              success{
                emailext body: 'email sendout from jenkins', subject: 'Test', to: 'rishikeshnaavani5@gmail.com'
               }
            }
        }  
	
    stages {
        stage('Hostname'){
            steps {
                sh 'hostname'
            }
            
        }

        stage('ip-address'){
            steps{
                sh 'hostname -I'
            }
            
        }

        stage('cpdetails'){
            steps{
                sh 'lscpu'
            }
            
        }

        stage('Disk utilation'){
            steps{
                sh 'df -kh'
            }
            
        }

        stage('Ram-usgae'){
            steps{
                sh 'free -g'
            }
        }
         
         stage('Ram-usgae-In-Detail'){
            steps{
                sh 'free -gh'
            }
        }
         stage('Uptime'){
            steps{
                sh 'uptime'
            }
        }

            stage('date'){
            steps{
                sh 'Date'
            }
        }

        

        
    }
}

Pipeline{
    agent any
    stages{
        stage('Hostname'){
            steps{
		sh 'hostname'
            }
        }
	stage('IP-address'){
            steps{
                sh 'hostname -I'
            }
        }
	stage('cpdetails'){
            steps{
                sh 'lscpu'
            }
        }
	stage('Disk Utilization'){
            steps{
                sh 'df -kh'
            }
        }
	stage('RAM-usage'){
            steps{
                sh 'free -g'
            }
        }
    }
} 
